<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/shape_round_rectangle"
        android:backgroundTint="@color/darkShade2" >

        <TextView
            android:id="@+id/course_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Course Code"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_code"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Course Title"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Credit"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/credit"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Sections"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/prerequisite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sections"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Prerequisite"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>